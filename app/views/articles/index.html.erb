<div class="container-fluid index-container">


  <%= render "static/account_nav" %>

  <%= render "static/category_nav" %>

  <div id="owl-demo" class="owl-carousel owl-theme">
   
    <div class="item content">
      <h1 class="carousel-title">
        <%= @carousel_article.first.title %>
      </h1>
        <%#= image_tag Photo.find_by(@carousel_article.last.photos).image.url(:full), :class=>'img-responsive' %>
        <%= image_tag @carousel_article.first.photos.first.image.url(:full), :class=>'img-responsive' %>
    </div>
    <div class="item conent">
        <h1 class="carousel-title">
           <%= @carousel_article.second.title %>
        </h1>
         <%#= image_tag Photo.find_by(@carousel_article.next.photos).image.url(:full), :class=>'img-responsive' %>
         <%= image_tag @carousel_article.second.photos.first.image.url(:full), :class=>'img-responsive' %>
    </div>
    <div class="item content">
      <img src="assets/fullimage3.jpg" alt="Mirror Edge">
    </div>
    <div class="item content">
      <img src="assets/fullimage4.jpg" alt="Mirror Edge">
    </div>
   
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Latest Articles</h1>

      <hr>

      <% @articles.each do |latest|%>
        <div class="row homepage_article text-left">
          <div class="col-md-3">
            <% if latest.photos.present? %>
              <%= image_tag latest.photos.first.image.url(:medium),:class => 'img-responsive' %>
            <% else %>
              <img src="http://placehold.it/400x300" class="img-responsive">
            <% end %>
          </div>
          <div class="col-md-9">
            <h2 class="title"><%= latest.title %></h2>
            <p class="byline"><%= latest.author %></p>
            <p class="summary"><%= latest.content.split(/\s+/)[0..100].join(' ') %></p>
          </div>
        </div>
        <hr>
      <% end %>

      <%= will_paginate @articles, renderer: BootstrapPagination::Rails %>

      <!--<ul class="pagination">
        <li><a href="#">&laquo;</a></li>
        <li><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li><a href="#">&raquo;</a></li>
      </ul>-->
    </div>
  </div>
   


  <%= render "static/ourfooter" %>
</div>
